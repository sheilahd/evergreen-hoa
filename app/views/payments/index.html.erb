<p id="notice"><%= notice %></p>

<h3>Payment Sheet ordered by Neighbor Family Name:</h3>

<table>
  <thead>
    <tr>

      <th>Neighbor</th>
      <th>Sqft</th>
      <th>Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>

        <td><%= payment.customer.fam_name%></td>
        <td><%= payment.sqft%></td>
        <td><%= payment.mult%></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

