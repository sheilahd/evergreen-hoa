<p id="notice"><%= notice %></p>

<h3>Payment Sheet ordered by Neighbor's Family Name:</h3>

<table class="table table-striped " >
  <thead>
    <tr>

      <th>Family Name</th>
      <th>Sqft</th>
      <th>Annual Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>

        <td><%= payment.customer.fam_name%></td>
        <td><%= payment.sqft%></td>
        <td><%= payment.mult%></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Delete', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Calculate Annual Fee', new_payment_path, :class => "btn btn-info btn-sm text-white" %> <%= link_to 'Home', home_index_path, :class => "btn btn-info btn-sm text-white" %>
