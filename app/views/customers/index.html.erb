<p id="notice"><%= notice %></p>

<h3>Neighbors Contact information</h3>
<h5>Ordered by Family Last Name: </h5>

<table>
  <thead>
    <tr>
      <th>Family Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>

      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.fam_name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= customer.full_address %></td>

        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

