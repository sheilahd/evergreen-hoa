<p id="notice"><%= notice %></p>

<h1>Neighbors List</h1>

<table>
  <thead>
    <tr>
      <th>Family Last Name</th>

      <th>Street Number</th>

      <th>Street Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.fam_name %></td>
        <td><%= customer.st_numb %></td>
        <td><%= customer.st_name %></td>
        <td><%= button_to 'Show', customer %></td>
        <td><%= button_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= button_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

